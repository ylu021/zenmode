{
  "manifest_version": 3,
  "name": "Zen Mode",
  "description": "Focus by allowing only selected websites",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
